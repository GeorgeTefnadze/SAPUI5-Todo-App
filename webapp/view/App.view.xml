<mvc:View
    controllerName="mytodo.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <App>
        <pages>
            <Page title="My Todos">
                <content>
                    <Input
                        placeholder="What needs to be done?"
                        value="{/newTodoText}"
                        submit=".onAddTodo"
                    />
                    <HBox
                        alignItems="Center"
                        justifyContent="Center"
                    >
                        <Button
                            text="Add Todo"
                            press=".onAddTodo"
                            type="Emphasized"
                        />
                        <Button
                            text="Clear Todos"
                            press=".onClearTodo"
                            type="Emphasized"
                            class="sapUiMediumMarginBegin"
                        />
                    </HBox>
                    <List items="{/todos}">
                        <CustomListItem
                            type="Active"
                            press=".onToggleTodo"
                        >
                            <HBox
                                alignItems="Center"
                                justifyContent="SpaceBetween"
                            >
                                <CheckBox
                                    selected="{done}"
                                    enabled="true"
                                />
                                <Text
                                    text="{text}"
                                    class="sapUiSmallMarginBegin"
                                />
                                <Button
                                    text="Delete"
                                    press=".onDeleteTodo"
                                    type="Reject"
                                />
                            </HBox>
                        </CustomListItem>
                    </List>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
